# Easier navigation: .., ..., ...., ....., ~ and -
alias ..='cd ..'         # Go up one directory
alias ...='cd ../..'     # Go up two directories
alias ....='cd ../../..' # Go up three directories
alias -- -='cd -'        # Go back
alias ~='cd ~'           # `cd` is probably faster to type though

# List files
alias ls='ls -F -G --color=auto --quoting-style=literal'
alias dir='dir -F -G --color=auto --quoting-style=literal'
alias ll='ls -l --color=auto --quoting-style=literal'
alias la='ls -lA --color=auto --quoting-style=literal'
alias l1='ls -1 --color=auto --quoting-style=literal'
alias sl='ls'

# Use ccat
alias cat="ccat"

# Use editor
alias edit=$EDITOR

if type_exists 'hub'; then
    # Use hub command instead of git
    alias git="hub"
fi

# Prompt for confirmation
alias cp="cp -iv"
alias rm="rm -i"
alias mv="mv -iv"

# Other useful aliases
alias grep="grep --color=auto -in"
alias _="sudo"

# Enable aliases to be sudoâ€™ed
alias sudo="sudo "

# Open gists in browser
alias gist="gist -o"

# Get public IP
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"

# Tmux in control mode
alias tmux="tmux -CC"

# Reload the shell (i.e. invoke as a login shell)
alias reload="reset; exec $SHELL -l"

if is_os "darwin"; then

    alias workspace="$HOME/.dotfiles/scripts/workspace.sh"

    # OS X has no `md5sum`, so use `md5` as a fallback
    command -v md5sum > /dev/null || alias md5sum="md5"

    # OS X has no `sha1sum`, so use `shasum` as a fallback
    command -v sha1sum > /dev/null || alias sha1sum="shasum"

    # Flush Directory Service cache
    alias flush="dscacheutil -flushcache"

    # Remove .DS_Store files
    alias dsclean="find . -type f -name .DS_Store -delete"

    # Toggle hidden files
    alias showhidden="defaults write com.apple.finder AppleShowAllFiles TRUE"
    alias hidehidden="defaults write com.apple.finder AppleShowAllFiles FALSE"

    # Lock the screen - Lock screen
    alias lock="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"

    # Lock the screen - Screensaver
    alias afk="/System/Library/Frameworks/ScreenSaver.framework/Resources/ScreenSaverEngine.app/Contents/MacOS/ScreenSaverEngine"

    # FIXME: There has to be a nicer way, surely?
    alias php="php -dzend_extension=$(brew --prefix php70-xdebug)/xdebug.so"
    alias php55="php -dzend_extension=$(brew --prefix php55-xdebug)/xdebug.so"
    alias php56="php -dzend_extension=$(brew --prefix php56-xdebug)/xdebug.so"
else
    alias php="php -dzend_extension=xdebug.so"
    alias phpunit="php $(which php)"
fi

alias composer.phar="/usr/local/bin/composer"

