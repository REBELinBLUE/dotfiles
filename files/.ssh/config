Host *

# Forward ssh agent to the remote machine.
ForwardAgent yes

# Automatically add all common hosts to the host file as they are connected to.
StrictHostKeyChecking no

# Seperate key for github
#Host github.com
#    IdentityFile ~/.ssh/github_rsa


# Home Macs
Host imac
    HostName iMac.lan
    User stephen

Host mba
    HostName MacBook-Air.lan
    User stephen

# Work Mac
Host work
    HostName holbmac0162.lan
    User stephen.ball

# NAS servers
Host mycloud
    HostName mycloudmirror.local
    User sshd
    HostkeyAlgorithms ssh-dss

Host mypassport
    HostName mypassport.local
    User root

# Web hosting
Host linode
    User stephen
    HostName rebelinblue.com

Host dropshare
    HostName rebelinblue.com
    User dropshare
    IdentityFile ~/.ssh/dropshare_key

# Vagrant VMs
Host *.vm *.app
    StrictHostKeyChecking no
    UserKnownHostsFile=/dev/null
    LogLevel ERROR
