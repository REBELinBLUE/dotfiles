# Kubernetes Cluster - Master
Host master
    # Master.local can be set in /etc/hosts
    Hostname cluster.lan
    User pi

# Kubernetes Cluster - Node 1
Host node-1
    Hostname 10.0.0.2
    ForwardAgent yes
    User pi
    ProxyCommand ssh -A master -W %h:%p

# Kubernetes Cluster - Node 2
Host node-2
    Hostname 10.0.0.3
    ForwardAgent yes
    User pi
    ProxyCommand ssh -A master -W %h:%p

# Kubernetes Cluster - Node 3
Host node-3
    Hostname 10.0.0.4
    ForwardAgent yes
    User pi
    ProxyCommand ssh -A master -W %h:%p
