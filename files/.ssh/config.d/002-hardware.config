# NAS
Host nas nas.lan
    HostName nas.lan
    User stephen
    Port 9222

# Portable NAS
Host mypassport mypassport.lan
    HostName mypassport.lan
    User root

# Raspberry Pi
Host rpi rpi.lan
    HostName rpi.lan
    User pi

# Network Appliances
Host firewalla fire.walla
    HostName fire.walla
    User pi

Host controller unifi-controller.lan
    HostName unifi-controller.lan
    User pi

Host homebridge homebridge.lan
    HostName homebridge.lan
    User pi

Host homeassistant homeassistant.lan
    HostName homeassistant.lan
    User root

# Others
Host remarkable remarkable.lan
    HostName remarkable.lan
    User root
